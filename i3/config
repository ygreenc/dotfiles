bar {
  status_command          python   ~/.dotfiles/bin/status.py
    position                bottom
    strip_workspace_numbers no
    workspace_buttons       yes
  colors {
    statusline #AAAAAA
    background #333333
    focused_workspace #282828 #282828 #FFFFFF
    inactive_workspace #333333 #333333 #AAAAAA
  }
}

# AUTOSTART
exec --no-startup-id dunst -config ~/.config/i3/dunstrc &
exec --no-startup-id feh --bg-fill $HOME/Media/img/saturn_shadow.png &
exec --no-startup-id autorandr --change --default mobile

client.unfocused #333333 #333333 #FFFFFF #333333
