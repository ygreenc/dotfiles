# vim:filetype=i3
# i3 config file (v4)

set $mod Mod4

set $bg-color #2f343f
set $inactive-bg-color #2f343f
set $text-color #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color #E53935
set $indicator #00ff00

# Define workspace name
set $ws1  "1: slack"
set $ws2  "2: code"
set $ws3  "3: phpstorm"
set $ws4  "4: web"
set $ws5  "5: logs"
set $ws6  "6:"
set $ws7  "7:"
set $ws8  "8:"
set $ws9  "9:"
set $ws10 "10:?"

workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent

for_window [class="^.*"] border pixel 5

#                         BORDER               BACKGROUND           TEXT                   INDICATOR

# Resize window (you can also use the mouse for that)
set $mode_resize ÔÅ•   resize
bindsym $mod+r mode "$mode_resize"
mode "$mode_resize" {
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        bindsym Shift+Left resize shrink width 5 px or 5 ppt
        bindsym Shift+Down resize grow height 5 px or 5 ppt
        bindsym Shift+Up resize shrink height 5 px or 5 ppt
        bindsym Shift+Right resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Locking screen mode
set $mode_power (l)ock | e(x)it | (s)uspend | (h)ibernate | (r)eboot | (p)oweroff
mode "$mode_power" {
        bindsym l mode "default", exec --no-startup-id $HOME/.config/i3/i3exit lock
        bindsym x mode "default", exec --no-startup-id $HOME/.config/i3/i3exit logout
        bindsym s mode "default", exec --no-startup-id $HOME/.config/i3/i3exit suspend
        bindsym h mode "default", exec --no-startup-id $HOME/.config/i3/i3exit hibernate
        bindsym r mode "default", exec --no-startup-id $HOME/.config/i3/i3exit reboot
        bindsym p mode "default", exec --no-startup-id $HOME/.config/i3/i3exit shutdown

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_marking" {
    # hardcoded focus keybindings
    bindsym i [class="(?i)palemoon"] focus
    bindsym r [class="(?i)chromium" title="Rocket.Chat"] focus
    bindsym k [class="(?i)keepass"] focus
    bindsym w [class="(?i)xfreerdp"] focus

    # keybindings for marking and jumping to clients
    bindsym a exec i3-input -F 'mark %s' -P 'Mark name: '
    bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

    # Assign marks to keys 1-5
    bindsym Shift+1 mark mark1
    bindsym Shift+2 mark mark2
    bindsym Shift+3 mark mark3
    bindsym Shift+4 mark mark4
    bindsym Shift+5 mark mark5

    # Jump to clients marked 1-5
    bindsym 1 [con_mark="mark1"] focus
    bindsym 2 [con_mark="mark2"] focus
    bindsym 3 [con_mark="mark3"] focus
    bindsym 4 [con_mark="mark4"] focus
    bindsym 5 [con_mark="mark5"] focus

    # Exit to the default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Keybindings
floating_modifier $mod
bindsym $mod+Return exec --no-startup-id urxvt
bindsym $mod+Shift+Return exec --no-startup-id urxvt -name __scratchpad

# Kill current container
bindsym $mod+q kill

# Open program menu
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+Shift+d exec --no-startup-id rofi -show ssh

# Move focus
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down

# Move container 
bindsym $mod+Shift+Left move left 35px
bindsym $mod+Shift+Down move down 35px
bindsym $mod+Shift+Up move up 35px
bindsym $mod+Shift+Right move right 35px

# Split vertically or horizontally
bindsym $mod+h split h
bindsym $mod+v split v

# Open terminal by splitting
bindsym $mod+Shift+h split h; exec --no-startup-id urxvt
bindsym $mod+Shift+v split v; exec --no-startup-id urxvt

# Toggle fullscreen
bindsym $mod+f fullscreen
bindsym $mod+g fullscreen global

# Change tilling layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Move focus
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Control+Shift+Prior move container to output left
bindsym $mod+Control+Shift+Next move container to output right

# Move/Display scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+plus scratchpad show

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Lock session
bindsym $mod+l exec --no-startup-id $HOME/.config/i3/i3exit lock

# Reload config
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Custom
bindsym $mod+n exec --no-startup-id thunar
bindsym $mod+b exec --no-startup-id keepass --auto-type
bindsym $mod+F1 exec --no-startup-id rofi -show run
bindsym $mod+F2 exec --no-startup-id rofi -show ssh
bindsym $mod+F3 exec --no-startup-id rofi -show window
bindsym $mod+F5 exec --no-startup-id teiler

# Spotify
bindsym $mod+p exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym $mod+o exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym $mod+i exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

# Screenshot
bindsym --release Print exec scrot $HOME/media/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
bindsym --release Shift+Print exec scrot -s $HOME/Pictures/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png

# Open lock screen menu
bindsym $mod+Control+l mode "$mode_power"

# Gaps resizing mode
bindsym $mod+Shift+g mode "$mode_gaps"

# Mark window
bindsym $mod+m mode "focused"

# fix graphics glitch
new_window none

# dialogs
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [instance="__scratchpad"] floating enable

# race condition (#1444) :(
for_window [class="(?i)pavucontrol"] floating enable, exec --no-startup-id "sleep 0.05 && i3-msg '[class=(?i)pavucontrol] move position mouse'"

# Assign certain applications to a specific workspace
assign [class="(?i)slack"] $ws1
assign [class="(?i)phpstorm"] $ws3
assign [class="(?i)chromium"] $ws4

